<h1 class='index-title'> Users </h1>

<ul class="user-list">
<% @users.each do |user| %>
  <li class='link-container tile-background search-results'>
    <div class="columns small-6"><img src= "<%= user.profile_photo %>" alt = <%= user.name %>></div>
    <div class="columns small-6 user-text">
      <h4 class="user-name" ><%= user.name %></h4>
      <hr>
      <p><%= user.email%></p>
      <p>Joined on: <%= user.formatted_date %></p>
    </div>
    <div class="user-bio"><p><%= user.bio %></p></div>
    <br>
    <%= link_to "Delete #{user.name}", user_path(user), :method => :delete, data: { confirm: 'Are you sure you want to delete this User? This will also delete all of their Cryptids and Sightings.' } %>
  </li>
<% end %>
</ul>
