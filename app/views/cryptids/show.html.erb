<h1 class='index-title'><%= @cryptid.name %></h1>

<div class='cryptid-container'>
  <div class='cryptid-show-title'>
    <%= @cryptid.category.name %> - <%= @cryptid.region.name %>
  </div>
  <img
    class="cryptid-show-pic"
    src='<%= @cryptid.pic_url %>'
    alt='<%= @cryptid.name %>'
  />
  <p> <%= @cryptid.description %>
  </div>
  <% if current_user %>
    <% if current_user == @cryptid.user || current_user.admin? %>
      <br>
      <%= link_to 'Edit', edit_cryptid_path(@cryptid) %>
      <%= link_to 'Delete', cryptid_path(@cryptid), :method => :delete, data: { confirm: 'Are you sure you want to delete this Cryptid?' } %>
    <% end %>
  <% end %>
</div>
